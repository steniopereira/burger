

<link href="https://fonts.googleapis.com/css?family=Indie+Flower" rel="stylesheet">


<div class="container bg">
	
	<div class="row">
	    <div class="center col-sm-12">
			<img src="assets/img/cheeburger.png" alt="Eat-Da-CheeBurger App">
	        <h1>Eat-Da-CheeBurger App</h1>
	        <p></p>
	    </div>
  	</div>
	<!-- end .row -->

	<div class="row">
	    <div class="col-sm-6">

	 			<br>
			<h2>Burgers Available To Eat!</h2>

			<ul>
			  {{#each burgers}}
			    {{#unless this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}}

			        <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
			          <input type="hidden" name="devoured" value="true">
			          <button class="btn-primary" type="submit">Eat a {{this.burger_name}}? Pepsi?</button>
			        </form>

			      </li>
			    {{/unless}}
			  {{/each}}
			</ul>

	    </div>

	    <div class="col-sm-6">

			<h2>Burgers That Have Been Eaten!</h2>
			
			  {{#each burgers}}
			    {{#if this.devoured}}
			      <li>
			      	{{this.id}}
			        You ate a {{this.burger_name}}! No Pepsi!

			      </li>
			    {{/if}}
			  {{/each}}
			
	    </div>

  	</div>
	<!-- end .row -->

	<div class="row">
	    <div class="center col-sm-12">

			<h2>ADD A BURGER TO EAT IT!</h2>

			<form class="create-update-form" action="/burgers" method="POST">

			  <div class="form-group">
			    <p>Enter a burger you want to eat and click the Submit Order button.</p>
			    <input type="text" id="ca" name="burger_name">
			  </div>
			  
			  <button class="btn-primary" type="submit">Submit Order</button>
			</form>

	    </div>
	
  	</div>
	<!-- end .row -->

</div>